        <path d="M0,260 C240,220 480,300 720,260 C960,220 1200,300 1440,260 L1440,320 L0,320 Z" fill="var(--theme-bg)" opacity="0.8"/>
      </svg>
    </div>
    <div class="sites-hero__content reveal">
      <p class="sites-hero__eyebrow">FourWardCast Family Campground</p>
      <h1 class="sites-hero__title">Find Your<br/><span class="sites-hero__accent">Perfect Stay</span></h1>
      <p class="sites-hero__sub">Full-hookup RV sites, cozy cabins, and scenic tent camping on Bull Shoals Lake in the Ozark Mountains.</p>
    </div>
  </section>

  <!-- ═══════════════ CATEGORY TABS ═══════════════ -->
  <section class="sites-tabs-wrap">
    <nav class="sites-tabs reveal" aria-label="Accommodation type">
      <button class="sites-tab is-active" data-tab="rv" type="button">
        <span class="sites-tab__icon">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="6" width="16" height="10" rx="2"/><path d="M18 11h2a2 2 0 012 2v1a2 2 0 01-2 2h-2"/><circle cx="7" cy="18" r="2"/><circle cx="15" cy="18" r="2"/><line x1="2" y1="16" x2="5" y2="16"/><line x1="17" y1="16" x2="13" y2="16"/></svg>
        </span>
        <span class="sites-tab__label">RV Sites</span>
      </button>
      <button class="sites-tab" data-tab="cabin" type="button">
        <span class="sites-tab__icon">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M3 21h18"/><path d="M5 21V7l7-4 7 4v14"/><path d="M9 21v-6h6v6"/><path d="M10 10h4"/></svg>
        </span>
        <span class="sites-tab__label">Cabins</span>
      </button>
      <button class="sites-tab" data-tab="deluxe" type="button">
        <span class="sites-tab__icon">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M3 21h18"/><path d="M5 21V7l7-4 7 4v14"/><path d="M9 21v-6h6v6"/><path d="M10 10h4"/><path d="M2 10l10-7 10 7"/></svg>
        </span>
        <span class="sites-tab__label">Deluxe Cabins</span>
