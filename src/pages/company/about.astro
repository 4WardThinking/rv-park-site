    top: 0;
    left: 0;
    right: 0;
    line-height: 0;
  }
  .about-cta__topo svg {
    width: 100%;
    height: auto;
    display: block;
  }
  .about-cta__inner {
    position: relative;
    z-index: 1;
    max-width: 520px;
    margin: 0 auto;
  }
  .about-cta__title {
    font-family: var(--theme-font-family-serif);
    font-size: clamp(1.6rem, 3.5vw, 2.2rem);
    font-weight: 700;
    margin: 0 0 0.75rem;
  }
  .about-cta__text {
    opacity: 0.8;
    margin: 0 0 1.5rem;
    line-height: 1.5;
  }
  .about-cta__actions {
    display: flex;
    justify-content: center;
    gap: 0.85rem;
    flex-wrap: wrap;
  }
  .about-cta__btn {
