    max-width: var(--container-max-width);
    margin: 0 auto;
  }
  .about-split__container {
    display: grid;
    grid-template-columns: 1fr 1.2fr;
    gap: clamp(1.5rem, 3vw, 3rem);
    align-items: center;
  }
  .about-split__heading {
    font-family: var(--theme-font-family-serif);
    font-size: clamp(1.6rem, 3vw, 2.2rem);
    font-weight: 700;
    margin: 0 0 1rem;
    color: var(--theme-on-bg);
  }
  .about-split__body {
    font-size: 1.05rem;
    line-height: 1.7;
    opacity: 0.85;
    margin: 0 0 1.25rem;
  }
  .about-split__chips {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }
  .about-split__chip {
    display: inline-flex;
    align-items: center;
    padding: 0.45rem 0.85rem;
