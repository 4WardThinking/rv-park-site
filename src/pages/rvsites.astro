---
import Layout from "../layouts/Page.astro";
import ReserveDatePicker from "../components/ReserveDatePicker.astro";
import { TextSection } from "@components/odyssey-theme";

const title = "RV Sites";
const description =
  "Full-hookup RV sites with easy access, quiet nights, and simple reservations.";
---

<Layout
  seo={{
    title: "RV Sites",
    description:
      "Full-hookup RV sites with easy access, quiet nights, and simple reservations.",
    }}
  >
  <TextSection>
  <div class="rvsplit">
    <div class="rvsplit__left">
      <h3>Choose the RV site that fits your rig</h3>

      <p>
        We offer 26 full-hookup options with space to relax and easy check-in.
        Pick your dates below to check availability and pricing.
      </p>

      {/* Desktop picker (in left column) */}
      <div class="picker-desktop">
        <ReserveDatePicker
          parkSlug="fourwardcast-flippin-ar"
          d="5f5b6ce3-89da-4cb3-b8d4-6a2688b9c0d5"
          buttonText="Reserve Now"
        />
      </div>

      <h3>Full Hookup Sites</h3>

      <p>
        <strong>Best for:</strong> Weekend stays, longer visits, and full-service comfort.
      </p>

      <p>
        15/30/50 amp electric<br />
        Water + Sewer<br />
        Pull-through and back-in options
      </p>
    </div>

    <div class="rvsplit__right">
      <video
        src={`${import.meta.env.BASE_URL}assets/images/videos/rvsites2.web.mp4`}
        autoplay
        muted
        loop
        preload="metadata"
        class="rvsplit__img"
      />

      {/* Mobile picker (under image) */}
      <div class="picker-mobile">
        <ReserveDatePicker
          parkSlug="fourwardcast-flippin-ar"
          d="5f5b6ce3-89da-4cb3-b8d4-6a2688b9c0d5"
          buttonText="Reserve Now"
        />
      </div>
    </div>
  </div>

  <hr />

  <h3>Whatâ€™s included with every RV stay</h3>
  <ul>
    <li>Restrooms / showers</li>
    <li>Wi-Fi <em>(currently being rolled out)</em></li>
    <li>Picnic tables</li>
    <li>Fire rings</li>
    <li>Quiet hours and family-friendly atmosphere</li>
  </ul>

  <hr />

  <h3>Pricing</h3>
  <ul>
    <li><strong>Daily</strong> $50</li>
    <li><strong>Weekly</strong> $250</li>
    <li><strong>Monthly</strong> $600</li>
  </ul>

  <hr />

  <h3>Need help picking a site?</h3>
  <p>
    Call or text: <strong>(327) 324-5000</strong><br />
    Or email:
    <a href="mailto:reservations@fourwardcast.com">reservations@fourwardcast.com</a>
  </p>
  </TextSection>
</Layout>


<style>
  /* Split layout (text left, image right) */
.rvsplit {
  display: flex;
  gap: 2rem;
  align-items: flex-start;
  flex-wrap: wrap;
  margin: 1.5rem 0;
}

.rvsplit__left {
  flex: 1 1 320px;
  min-width: 280px;
}

.rvsplit__right {
  flex: 0 1 420px;
  min-width: 280px;
}

.rvsplit__img {
  width: 100%;
  height: auto;
  border-radius: 16px;
  display: block;
}

/* Picker placement: desktop shows in left column, mobile shows under image */
.picker-desktop {
  display: block;
  margin: 1rem 0 1.25rem;
}

.picker-mobile {
  display: none;
  margin: 1rem 0 0;
}

/* Mobile: stack content nicely and show picker under image */
@media (max-width: 640px) {
  .picker-desktop {
    display: none;
  }

  .picker-mobile {
    display: block;
  }
}
</style>