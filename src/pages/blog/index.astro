---
import { parse, isBefore, format } from 'date-fns';
import Layout from '../../layouts/Page.astro';

const posts = await Astro.glob('./posts/*.mdx').then(posts =>
	posts
		.map(({ frontmatter, url }) => ({
			title: frontmatter.title,
			description: frontmatter.description,
			authors: frontmatter.authors,
			publishDate: parse(frontmatter.publishDate, 'MMMM d, yyyy', new Date()),
			featuredImage: frontmatter.featuredImage,
			excerpt: frontmatter.excerpt,
			tags: frontmatter.tags || [],
			href: url,
		}))
		.sort((a, b) => {
			if (isBefore(a.publishDate, b.publishDate)) return 1;
			if (isBefore(b.publishDate, a.publishDate)) return -1;
			return 0;
		})
);

const seo = {
	title: 'Blog | FourWardCast',
	description: 'Blog for FourWardCast Family Campground and Cabins at Bull Shoals Lake',
};
---

<Layout {seo}>
  <!-- ═══════════════ HERO ═══════════════ -->
  <section class="blog-hero">
    <div class="blog-hero__topo" aria-hidden="true">
      <svg viewBox="0 0 1440 320" preserveAspectRatio="none">
        <path d="M0,160 C180,80 360,240 540,160 C720,80 900,240 1080,160 C1200,100 1320,200 1440,160 L1440,320 L0,320 Z" fill="var(--theme-bg)" opacity="0.3"/>
        <path d="M0,200 C200,140 400,260 600,200 C800,140 1000,260 1200,200 C1320,160 1380,230 1440,200 L1440,320 L0,320 Z" fill="var(--theme-bg)" opacity="0.5"/>
        <path d="M0,260 C240,220 480,300 720,260 C960,220 1200,300 1440,260 L1440,320 L0,320 Z" fill="var(--theme-bg)" opacity="0.8"/>
      </svg>
    </div>
    <div class="blog-hero__content reveal">
      <p class="blog-hero__eyebrow">FourWardCast Family Campground</p>
      <h1 class="blog-hero__title">From the<br/><span class="blog-hero__accent">Campground</span></h1>
      <p class="blog-hero__sub">News, tips, and stories from FourWardCast on Bull Shoals Lake.</p>
    </div>
  </section>

  <!-- ═══════════════ POSTS ═══════════════ -->
  <section class="blog-posts">
    <div class="blog-posts__container">
      {posts.length > 0 ? (
        <div class="blog-posts__grid">
          {posts.map((post) => (
            <a class="post-card reveal" href={post.href}>
              <div class="post-card__image-wrap">
                {post.featuredImage ? (
                  <img
                    class="post-card__img"
                    src={post.featuredImage}
                    alt={post.title}
                    loading="lazy"
                  />
                ) : (
                  <div class="post-card__placeholder">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" width="48" height="48">
                      <path d="M14.5 2H6a2 2 0 00-2 2v16a2 2 0 002 2h12a2 2 0 002-2V7.5L14.5 2z"/>
                      <polyline points="14 2 14 8 20 8"/>
                      <line x1="16" y1="13" x2="8" y2="13"/>
                      <line x1="16" y1="17" x2="8" y2="17"/>
                      <polyline points="10 9 9 9 8 9"/>
                    </svg>
                  </div>
                )}
                <div class="post-card__date-badge">
                  <span class="post-card__date-day">{format(post.publishDate, 'd')}</span>
                  <span class="post-card__date-month">{format(post.publishDate, 'MMM')}</span>
                </div>
              </div>
              <div class="post-card__body">
                {post.tags.length > 0 && (
                  <div class="post-card__tags">
                    {post.tags.map((tag: string) => (
                      <span class="post-card__tag">{tag}</span>
                    ))}
                  </div>
                )}
                <h2 class="post-card__title">{post.title}</h2>
                {post.excerpt && <p class="post-card__excerpt">{post.excerpt}</p>}
                <span class="post-card__read-more">Read more</span>
              </div>
            </a>
          ))}
        </div>
      ) : (
        <div class="blog-posts__empty reveal">
          <p>No posts yet. Check back soon!</p>
        </div>
      )}
    </div>
  </section>

  <!-- ═══════════════ NEWSLETTER ═══════════════ -->
  <section class="blog-newsletter">
    <div class="blog-newsletter__container reveal">
      <h2 class="blog-newsletter__title">Stay in the loop</h2>
      <p class="blog-newsletter__text">Get campground news and updates delivered to your inbox.</p>
      <form class="blog-newsletter__form" name="Newsletter Form" method="POST" action="/newsletter-thank-you">
        <input
          class="blog-newsletter__input"
          type="email"
          name="Email"
          placeholder="your@email.com"
          required
        />
        <button class="blog-newsletter__btn" type="submit">Subscribe</button>
      </form>
    </div>
  </section>

  <!-- ═══════════════ CTA ═══════════════ -->
  <section class="blog-cta reveal">
    <div class="blog-cta__topo" aria-hidden="true">
      <svg viewBox="0 0 1440 200" preserveAspectRatio="none">
        <path d="M0,0 L0,40 C240,80 480,20 720,60 C960,100 1200,30 1440,60 L1440,0 Z" fill="var(--theme-bg)" opacity="0.5"/>
      </svg>
    </div>
    <div class="blog-cta__inner">
      <h2 class="blog-cta__title">Plan your next trip</h2>
      <p class="blog-cta__text">Check out our sites and cabins, or see what the campground has to offer.</p>
      <div class="blog-cta__actions">
        <a class="blog-cta__btn" href={`${import.meta.env.BASE_URL}sites/`}>
          View Sites & Cabins
        </a>
        <a class="blog-cta__btn blog-cta__btn--secondary" href={`${import.meta.env.BASE_URL}amenities/`}>
          Amenities
        </a>
      </div>
    </div>
  </section>
</Layout>

<!-- ═══════════════ CLIENT SCRIPT ═══════════════ -->
<script is:inline>
(function() {
  var prefersReduced = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

  if (!prefersReduced && 'IntersectionObserver' in window) {
    var observer = new IntersectionObserver(function(entries) {
      entries.forEach(function(entry) {
        if (entry.isIntersecting) {
          entry.target.classList.add('is-visible');
        }
      });
    }, { threshold: 0.12, rootMargin: '0px 0px -40px 0px' });

    document.querySelectorAll('.reveal').forEach(function(el) {
      observer.observe(el);
    });
  } else {
    document.querySelectorAll('.reveal').forEach(function(el) {
      el.classList.add('is-visible');
    });
  }
})();
</script>

<style>
  /* ════════════════════════════════════════
     REVEAL ANIMATION
     ════════════════════════════════════════ */
  .reveal {
    opacity: 0;
    transform: translateY(24px);
    transition: opacity 0.7s cubic-bezier(0.22, 1, 0.36, 1),
                transform 0.7s cubic-bezier(0.22, 1, 0.36, 1);
  }
  .reveal.is-visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* ════════════════════════════════════════
     HERO
     ════════════════════════════════════════ */
  .blog-hero {
    position: relative;
    padding: clamp(4rem, 10vw, 8rem) clamp(1.5rem, 4vw, 3rem) clamp(3rem, 6vw, 5rem);
    background: var(--theme-primary);
    color: var(--theme-on-primary);
    overflow: hidden;
    text-align: center;
  }
  .blog-hero__topo {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    line-height: 0;
  }
  .blog-hero__topo svg {
    width: 100%;
    height: auto;
    display: block;
  }
  .blog-hero__content {
    position: relative;
    z-index: 1;
    max-width: 680px;
    margin: 0 auto;
  }
  .blog-hero__eyebrow {
    font-family: var(--theme-font-family-sans);
    text-transform: uppercase;
    letter-spacing: 0.18em;
    font-size: 0.8rem;
    opacity: 0.7;
    margin-bottom: 1rem;
  }
  .blog-hero__title {
    font-family: var(--theme-font-family-serif);
    font-size: clamp(2.4rem, 5.5vw, 4rem);
    font-weight: 700;
    line-height: 1.1;
    margin: 0 0 1.2rem;
  }
  .blog-hero__accent {
    color: var(--theme-surface-1);
  }
  .blog-hero__sub {
    font-size: clamp(1rem, 1.6vw, 1.15rem);
    opacity: 0.85;
    max-width: 520px;
    margin: 0 auto;
    line-height: 1.6;
  }

  /* ════════════════════════════════════════
     POSTS GRID
     ════════════════════════════════════════ */
  .blog-posts {
    padding: clamp(3rem, 6vw, 5rem) clamp(1rem, 3vw, 2rem);
    max-width: var(--container-max-width);
    margin: 0 auto;
  }
  .blog-posts__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }
  .blog-posts__empty {
    text-align: center;
    padding: 4rem 1rem;
    font-size: 1.1rem;
    opacity: 0.6;
  }

  /* ════════════════════════════════════════
     POST CARD
     ════════════════════════════════════════ */
  .post-card {
    display: flex;
    flex-direction: column;
    background: #fff;
    border-radius: 20px;
    border: 1.5px solid rgba(81, 69, 38, 0.08);
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  .post-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 32px rgba(81, 69, 38, 0.12);
  }

  /* Image */
  .post-card__image-wrap {
    position: relative;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background: rgba(81, 69, 38, 0.06);
  }
  .post-card__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.4s ease;
  }
  .post-card:hover .post-card__img {
    transform: scale(1.03);
  }
  .post-card__placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #8b7355 0%, #a0845c 40%, #c9956b 100%);
    color: rgba(255, 255, 255, 0.4);
  }

  /* Date badge */
  .post-card__date-badge {
    position: absolute;
    top: 0.75rem;
    right: 0.75rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0.4rem 0.6rem 0.35rem;
    background: var(--theme-primary);
    color: var(--theme-on-primary);
    border-radius: 10px;
    line-height: 1;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
  }
  .post-card__date-day {
    font-family: var(--theme-font-family-serif);
    font-size: 1.3rem;
    font-weight: 700;
  }
  .post-card__date-month {
    font-family: var(--theme-font-family-sans);
    font-size: 0.65rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    opacity: 0.8;
  }

  /* Body */
  .post-card__body {
    padding: 1.25rem 1.4rem 1.4rem;
    display: flex;
    flex-direction: column;
    flex: 1;
  }

  /* Tags */
  .post-card__tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.35rem;
    margin-bottom: 0.6rem;
  }
  .post-card__tag {
    display: inline-block;
    padding: 0.2rem 0.6rem;
    font-family: var(--theme-font-family-sans);
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    background: rgba(255, 134, 48, 0.1);
    color: var(--theme-surface-1);
    border-radius: 999px;
  }

  .post-card__title {
    font-family: var(--theme-font-family-serif);
    font-size: clamp(1.15rem, 2vw, 1.4rem);
    font-weight: 700;
    margin: 0 0 0.5rem;
    color: var(--theme-on-bg);
    line-height: 1.3;
  }
  .post-card__excerpt {
    font-size: 0.88rem;
    line-height: 1.55;
    opacity: 0.7;
    margin: 0;
    flex: 1;
  }
  .post-card__read-more {
    display: inline-block;
    margin-top: 1rem;
    font-family: var(--theme-font-family-sans);
    font-size: 0.85rem;
    font-weight: 700;
    color: var(--theme-surface-1);
    transition: gap 0.2s ease;
  }
  .post-card:hover .post-card__read-more {
    text-decoration: underline;
  }

  /* ════════════════════════════════════════
     NEWSLETTER
     ════════════════════════════════════════ */
  .blog-newsletter {
    padding: 0 clamp(1rem, 3vw, 2rem) clamp(2rem, 4vw, 3rem);
    max-width: var(--container-max-width);
    margin: 0 auto;
  }
  .blog-newsletter__container {
    background: var(--theme-primary);
    border-radius: 24px;
    padding: clamp(2rem, 4vw, 3rem) clamp(1.5rem, 3vw, 2.5rem);
    text-align: center;
  }
  .blog-newsletter__title {
    font-family: var(--theme-font-family-serif);
    font-size: clamp(1.4rem, 2.5vw, 1.8rem);
    font-weight: 700;
    color: var(--theme-on-primary);
    margin: 0 0 0.4rem;
  }
  .blog-newsletter__text {
    font-family: var(--theme-font-family-sans);
    font-size: 0.95rem;
    color: var(--theme-on-primary);
    opacity: 0.8;
    margin: 0 0 1.25rem;
  }
  .blog-newsletter__form {
    display: flex;
    max-width: 440px;
    margin: 0 auto;
    gap: 0;
  }
  .blog-newsletter__input {
    flex: 1;
    padding: 0.8rem 1rem;
    border: 1.5px solid rgba(255, 255, 255, 0.25);
    border-right: 0;
    border-radius: 999px 0 0 999px;
    font-family: var(--theme-font-family-sans);
    font-size: 0.95rem;
    background: rgba(255, 255, 255, 0.12);
    color: var(--theme-on-primary);
    outline: none;
    transition: border-color 0.2s ease, background 0.2s ease;
  }
  .blog-newsletter__input::placeholder {
    color: rgba(255, 255, 255, 0.45);
  }
  .blog-newsletter__input:focus {
    border-color: var(--theme-surface-1);
    background: rgba(255, 255, 255, 0.18);
  }
  .blog-newsletter__btn {
    padding: 0.8rem 1.4rem;
    border: none;
    border-radius: 0 999px 999px 0;
    background: var(--theme-surface-1);
    color: #fff;
    font-family: var(--theme-font-family-sans);
    font-size: 0.9rem;
    font-weight: 700;
    cursor: pointer;
    white-space: nowrap;
    transition: filter 0.2s ease, transform 0.2s ease;
  }
  .blog-newsletter__btn:hover {
    filter: brightness(1.1);
    transform: translateY(-1px);
  }

  /* ════════════════════════════════════════
     CTA
     ════════════════════════════════════════ */
  .blog-cta {
    position: relative;
    background: var(--theme-primary);
    color: var(--theme-on-primary);
    text-align: center;
    padding: clamp(4rem, 8vw, 6rem) clamp(1.5rem, 4vw, 3rem) clamp(3rem, 6vw, 4rem);
    padding-bottom: calc(clamp(3rem, 6vw, 4rem) + var(--theme-shape-radius));
    margin-top: 3rem;
    margin-bottom: calc(-1 * var(--theme-shape-radius));
    overflow: hidden;
  }
  .blog-cta__topo {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    line-height: 0;
  }
  .blog-cta__topo svg {
    width: 100%;
    height: auto;
    display: block;
  }
  .blog-cta__inner {
    position: relative;
    z-index: 1;
    max-width: 520px;
    margin: 0 auto;
  }
  .blog-cta__title {
    font-family: var(--theme-font-family-serif);
    font-size: clamp(1.6rem, 3.5vw, 2.2rem);
    font-weight: 700;
    margin: 0 0 0.75rem;
  }
  .blog-cta__text {
    opacity: 0.8;
    margin: 0 0 1.5rem;
    line-height: 1.5;
  }
  .blog-cta__actions {
    display: flex;
    justify-content: center;
    gap: 0.85rem;
    flex-wrap: wrap;
  }
  .blog-cta__btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.85rem 1.6rem;
    border-radius: var(--theme-button-border-radius);
    text-decoration: none;
    font-family: var(--theme-font-family-sans);
    font-weight: 700;
    font-size: 0.95rem;
    background: var(--theme-surface-1);
    color: #fff;
    transition: transform var(--theme-transition), filter var(--theme-transition);
  }
  .blog-cta__btn:hover {
    transform: translateY(-2px);
    filter: brightness(1.08);
  }
  .blog-cta__btn--secondary {
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(4px);
    border: 1.5px solid rgba(255, 255, 255, 0.3);
  }

  /* ════════════════════════════════════════
     RESPONSIVE
     ════════════════════════════════════════ */
  @media (max-width: 768px) {
    .blog-posts__grid {
      grid-template-columns: 1fr;
      max-width: 560px;
      margin: 0 auto;
    }
  }
  @media (max-width: 480px) {
    .blog-newsletter__form {
      flex-wrap: wrap;
    }
    .blog-newsletter__input {
      width: 100%;
      border-right: 1.5px solid rgba(255, 255, 255, 0.25);
      border-radius: 999px;
    }
    .blog-newsletter__input:focus {
      border-right-color: var(--theme-surface-1);
    }
    .blog-newsletter__btn {
      width: 100%;
      margin-top: 0.5rem;
      border-radius: 999px;
    }
  }

  /* ════════════════════════════════════════
     REDUCED MOTION
     ════════════════════════════════════════ */
  @media (prefers-reduced-motion: reduce) {
    .reveal { opacity: 1; transform: none; transition: none; }
    .post-card__img { transition: none; }
  }
</style>
